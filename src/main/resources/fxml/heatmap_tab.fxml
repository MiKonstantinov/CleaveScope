<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.HeatmapTabController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Min Color:" />
        <ColorPicker fx:id="minColorPicker" />
        <Label text="Max Color:" />
        <ColorPicker fx:id="maxColorPicker" />
        <Label text="Color Scale Preset:" />
        <ComboBox fx:id="gradientComboBox" prefHeight="25.0" prefWidth="150.0" />
        <CheckBox fx:id="showValuesCheckBox" text="Show Values" />
        <CheckBox fx:id="showGapsCheckbox" text="Gaps" />
        <CheckBox fx:id="showXCheckbox" text="Show X" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Sorting:" />
        <ComboBox fx:id="sortingComboBox" prefWidth="150" />
        <Label text="Normalization:" />
        <ComboBox fx:id="normalizationMethodBox" prefWidth="150" />
        <Label text="Normalization Source:" />
        <ComboBox fx:id="normalizationSourceBox" prefWidth="200" />
        <Hyperlink fx:id="link" onAction="#handleLinkClick" prefHeight="23.0" prefWidth="107.0" text="Uniprot Taxonomy" />
        <Button onAction="#exportHeatmapAsPng" text="Export PNG" />
    </HBox>
    <ScrollPane fx:id="heatmapScrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <StackPane fx:id="heatmapContainer" alignment="CENTER" style="-fx-background-color: transparent;" />
        </content>
    </ScrollPane>
</VBox>
