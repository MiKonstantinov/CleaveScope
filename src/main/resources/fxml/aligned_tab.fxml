<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.AlignedTabController"
      spacing="10">

    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <HBox spacing="10">
        <Button fx:id="copyButton" text="Copy to Clipboard" />
        <Button fx:id="saveButton" text="Save to File" />
    </HBox>

    <TextArea fx:id="alignedOutputArea" prefHeight="600" wrapText="true" editable="false" />
</VBox>
